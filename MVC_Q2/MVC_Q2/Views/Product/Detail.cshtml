@model MVC_Q2.Models.DataModel
@{
    ViewBag.Title = "Detail";
}

<h2>Detail</h2>
<h3>ID : @Model.Id</h3>
<div id="tableContainer">
    <table cellspacing="0" cellpadding="0" class="table03">
        <tr>
            <td> ProductName  </td>
            <td> @Model.Product_Name </td>
        </tr>
        <tr>
            <td> Locale   </td>
            <td> @Model.Locale </td>
        </tr>
        <tr>
            <td> Price   </td>
            <td> @CurrencyConversion(@Model.Price, Model.Locale) </td>
        </tr>
        <tr>
            <td> PromotePrice   </td>
            <td> @CurrencyConversion(@Model.Promote_Price, Model.Locale) </td>
        </tr>
        <tr>
            <td> CreateDate   </td>
            <td> @Model.Create_Date </td>
        </tr>
    </table>
    <div class="button_area align_c">
        <button type="button" class="button02" onclick="javascript:window.history.go(-1);">上一頁</button>
    </div>
</div>

@helper CurrencyConversion(string price, string locale)
{
    string result = "";
    double doubleResult;
    if (double.TryParse(price, out doubleResult) && doubleResult > 0)
    {
        switch (locale)
        {
            case "US":
                result = "$" + price;
                break;
            case "DE":
                result = "€" + price;
                break;
            case "CA":
                result = "$" + price;
                break;
            case "ES":
                result = "€" + price;
                break;
            case "FR":
                result = "€" + price;
                break;
            case "JP":
                result = "¥" + price;
                break;
            default:
                result = "-";
                break;
        }
    } else
    {
        result = "-";
    }
    <text>@result</text>
}
